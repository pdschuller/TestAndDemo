<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inbound.ModalViews.CloseUrModal"
              BackgroundColor="Transparent" >
    <ContentPage.Content BackgroundColor="Transparent">
        <StackLayout BackgroundColor="Transparent">
            <StackLayout Margin="40" BackgroundColor="Coral" HeightRequest="300">
                
                <Label Text="Data has been uploaded. Select UR to close or press ESC." Margin="20" />

                <StackLayout Orientation="Horizontal">
                    <Button Text="F5 - Close UR" Clicked="CloseThisModal" 
                        VerticalOptions="End" Margin="10,20,0,0" />
                    <Button Text="Esc - Done" Clicked="CloseThisModal" 
                        VerticalOptions="End" Margin="0,20,0,0" />
                </StackLayout>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>