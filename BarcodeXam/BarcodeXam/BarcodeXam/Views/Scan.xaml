<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeXam.Views.Scan">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms! This is the Scan page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand">
                <Button Clicked="ScanClicked" Text="Scan"></Button>
                <Button Clicked="List" Text="List"></Button>
                <Button Clicked="About" Text="About"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>