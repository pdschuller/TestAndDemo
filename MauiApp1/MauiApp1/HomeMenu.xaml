<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.HomeMenu"
             Title="Home Menu">
    
    <VerticalStackLayout>

        <Grid   Margin="0,40,0,0"
            RowDefinitions="40, Auto"
            ColumnDefinitions=".5*, .5*"
            Padding="20"
            ColumnSpacing="30" RowSpacing="40"
        >
            <Button Grid.Row="0" Grid.Column="0" Text="MainPage"
                    Clicked="MainPageButtonClicked" />
            <Button Grid.Row="0" Grid.Column="1" Text="Button 2" />
            <Button Grid.Row="1" Grid.Column="0" Text="Button 3" />
            <Button Grid.Row="1" Grid.Column="1" Text="Button 4" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>